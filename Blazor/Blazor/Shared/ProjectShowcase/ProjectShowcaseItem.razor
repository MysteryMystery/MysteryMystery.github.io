@using Blazor.Shared.Components
@inject ILogger<ProjectShowcaseItem> Logger

<div class="flex flex-col md:flex-row justify-center p-1 md:p-4 rounded-lg bg-light shadow-lg @CssClass">
    @if (Thumbnail is not null)
    {
        <div class="basis-1/3 mx-auto flex justify-center">
            @Thumbnail
        </div>
    }
    <div class="@(Thumbnail is not null ? "basis-2/3" : "") flex flex-col">
        <div class="flex flex-row justify-between">
            <div class="text-center md:text-left p-1 md:p-4">
                <h1 class="text-2xl">@HeaderText</h1>
            </div>
        </div>
        <div class="grow flex items-center p-1 md:p-4">
            <div class="text-center md:text-left">
                <p class="">@BodyText</p>
            </div>
        </div>
        <div class="text-center md:text-left p-1 md:p-4">
            @if (WebsiteLink is not null)
            {
                <NavLink class="bg-primary/90 hover:bg-primary text-white font-bold py-2 px-4 rounded" href="@WebsiteLink" target="@NavLinkTarget">@NavLinkText</NavLink>
            }
        </div>
        <div class="flex justify-end gap-1 flex-wrap">
            <CascadingValue Value="@this">
                @Tags
            </CascadingValue>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment? Thumbnail { get; set; }

    [Parameter]
    public RenderFragment HeaderText { get; set; }

    [Parameter]
    public RenderFragment BodyText { get; set; }

    [Parameter]
    public string NavLinkText { get; set; } = "Website";

    [Parameter]
    public RenderFragment Tags { get; set; }

    [Parameter]
    public string? WebsiteLink { get; set; }

    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public string NavLinkTarget { get; set; } = "_blank";

    private List<ProjectShowcaseTag> _tags = new();
}
