<a class="bg-@ButtonType/90 hover:bg-@ButtonType text-white font-bold py-2 px-4 rounded" href="@Href" target="@Target">
    @ChildContent
</a>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string ButtonType { get; set; } = "primary";

    [Parameter]
    public string Target { get; set; } = "";

    [Parameter]
    public string Href { get; set; }
}
