<div class="max-w-6xl mx-auto px-4 py-14 grid md:grid-cols-2 gap-10 items-center">

    <!-- Left: Text -->
    <div class="opacity-0 animate-fade-in-up" style="animation-delay:0.1s">
        <h2 class="text-2xl font-bold">@(Study.Title)</h2>
        <p class="mt-4 text-slate-600">
            @(Study.Description)
        </p>
        <!-- Key outcomes -->
        <ul class="mt-6 space-y-3 text-slate-700">
            @foreach(var bullet in Study.Bullets){
                <li class="flex items-start gap-2">
                    <span class="mt-1 w-2 h-2 rounded-full bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e]"></span>
                    <span>@(bullet)</span>
                </li>
            }
        </ul>

        <!-- CTA -->
        <div class="mt-6">
            <a href="#projects" class="inline-flex items-center gap-2 border border-slate-300 text-slate-800 hover:bg-slate-100 px-4 py-2 rounded-md transition">
                View related projects
            </a>
        </div>
    </div>

    <!-- Right: Visual -->
    <div class="flex justify-center md:justify-end opacity-0 animate-fade-in-up" style="animation-delay:0.2s">
        <div class="relative">
            <!-- Gradient halo -->
            <div class="absolute inset-0 -m-6 rounded-[24px] blur-2xl opacity-50 bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-gradient-flow"></div>
            <!-- Illustration / diagram -->
            <img src="img/azure-logo.svg" alt="On‑prem to cloud migration diagram" class="relative w-[420px] max-w-full drop-shadow-xl select-none" />
        </div>
    </div>

</div>