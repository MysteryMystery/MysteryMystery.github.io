@using MysteryMystery.github.io.Components.Helpers

@for (int i = 0; i < Cards.Count; i++)
{
    var project = Cards[i];

    <article class="group grid grid-rows-[auto_1fr_auto] gap-4 overflow-hidden rounded-lg bg-white border border-slate-200 p-5 pt-8 opacity-0 animate-fade-in-up transition-transform transition-shadow duration-300 hover:scale-[1.03] hover:shadow-lg"
             style="animation-delay: @(0.1 + (i * 0.1))s">

        <!-- Shimmer strip -->
        <span class="pointer-events-none absolute top-0 left-0 w-full h-1 z-10 bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-border-gradient opacity-0 transition-opacity duration-300 group-hover:opacity-100"></span>

        <!-- Title -->
        <h3 class="font-semibold">@project.Name</h3>

        <!-- Description -->
        <p class="mt-2 text-sm text-slate-600">@project.Description</p>


        <div class="flex flex-col sm:flex-row justify-between grid-cols-[auto_1fr] items-start sm:items-center gap-4">
            <!-- Links -->
            <div class="flex gap-4 text-sm font-medium">
                <div class="mt-4 flex gap-4 text-sm font-medium">
                    <!-- GitHub link -->
                    <a href="@project.RepoUrl" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center gap-1 text-[#4c6cff] hover:text-[#3b54cc] transition-colors duration-300">
                        <span class="transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-[1px]">
                            <!-- GitHub icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                                <path fill-rule="evenodd" d="M12 .5C5.65.5.5 5.65.5 12c0 5.09 3.29 9.39 7.86 10.91.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.7-3.88-1.54-3.88-1.54-.53-1.35-1.3-1.71-1.3-1.71-1.06-.73.08-.72.08-.72 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.26 3.4.96.11-.75.41-1.26.75-1.55-2.55-.29-5.23-1.28-5.23-5.7 0-1.26.45-2.29 1.19-3.1-.12-.29-.52-1.45.11-3.02 0 0 .97-.31 3.18 1.18a11.1 11.1 0 0 1 5.8 0c2.21-1.49 3.18-1.18 3.18-1.18.63 1.57.23 2.73.11 3.02.74.81 1.19 1.84 1.19 3.1 0 4.43-2.69 5.41-5.25 5.69.42.36.8 1.08.8 2.18 0 1.57-.01 2.84-.01 3.23 0 .31.21.68.8.56A10.99 10.99 0 0 0 23.5 12c0-6.35-5.15-11.5-11.5-11.5z" clip-rule="evenodd" />
                            </svg>
                        </span>
                        Repo
                    </a>

                    @if (!string.IsNullOrWhiteSpace(project.LiveUrl))
                    {
                        <!-- Live site link -->
                        <a href="@project.LiveUrl" target="_blank" rel="noopener noreferrer"
                           class="inline-flex items-center gap-1 text-[#ff6cab] hover:text-[#e05597] transition-colors duration-300">
                            <span class="transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-[1px]">
                                <!-- External link icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H19.5M19.5 6V12M19.5 6L10.5 15M6 6h.01M6 12h.01M6 18h.01" />
                                </svg>
                            </span>
                            Live
                        </a>
                    }
                </div>
            </div>


            <!-- Tech pills -->
            @if (project.Tech is not null && project.Tech.Count > 0)
            {
                <div class="flex flex-wrap flex-row justify-center md:justify-end gap-2">
                    @foreach (var tag in project.Tech)
                    {
                        var colour = LanguageColours.Colours.TryGetValue(tag.Language, out var c) ? c : "#999";

                        <div class="inline-flex items-stretch text-[11px] font-medium rounded-md border border-slate-200 shadow-sm overflow-hidden bg-white/80 backdrop-blur">
                            <!-- Left: Language -->
                            <div class="flex items-center gap-1 px-2 py-[2px]">
                                <span class="w-1.5 h-1.5 rounded-full shrink-0" style="background-color:@colour"></span>
                                <span>@tag.Language</span>
                            </div>

                            <!-- Right: Frameworks -->
                            @if (tag.Frameworks is not null && tag.Frameworks.Count > 0)
                            {
                                <div class="flex items-center gap-1 px-2 py-[2px] bg-slate-100 text-slate-600 border-l border-slate-300">
                                    @foreach (var fw in tag.Frameworks)
                                    {
                                        <span>@fw</span>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </article>
}