@inherits AbstractThemedComponent

<div class="drop-shadow-lg bg-clip-padding backdrop-filter backdrop-blur-md p-2 flex flex-col @(this.Classes)">
    @if (Header is not null)
    {
        <div class="shrink p-2">
            <h1 class="text-2xl">
                @Header
            </h1>
        </div>
    }

    @if (EnableDivider)
    {

        <div class="flex justify-between">
            <div class="w-1/12 border-2 border-secondary-light dark:border-secondary-dark"></div>
            <div class="w-10/12 border-2 border-secondary-light dark:border-secondary-dark"></div>
        </div>
    }

    @if (Body is not null)
    {
        <div class="grow p-4">
            @Body
        </div>
    }

    @if (Footer is not null)
    {
        <div class="shrink p-2">
            @Footer
        </div>
    }
</div>