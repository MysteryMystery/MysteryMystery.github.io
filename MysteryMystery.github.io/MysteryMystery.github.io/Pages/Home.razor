<!-- Projects section (neutral background) -->
<section id="projects" class="border-t border-slate-200 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">Selected projects</h2>
        <div class="mt-8 grid md:grid-cols-2 gap-6">
            @for (int i = 0; i < Projects.Count; i++)
            {
                var project = Projects[i];
                <article class="group relative overflow-hidden rounded-lg bg-white border border-slate-200 p-5 pt-8 opacity-0 animate-fade-in-up transition-transform transition-shadow duration-300 hover:scale-[1.03] hover:shadow-lg" style="animation-delay:@(0.1 + (i * 0.1))s">

                    <!-- Shimmer strip -->
                    <span class="pointer-events-none absolute top-0 left-0 w-full h-1 z-10 bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-border-gradient opacity-0 transition-opacity duration-300 group-hover:opacity-100"></span>

                    <!-- Icon in top-right with gradient background animation -->
                    <div class="absolute top-3 right-3 w-8 h-8 flex items-center justify-center rounded-md text-white transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6 bg-[length:200%_200%] group-hover:bg-gradient-to-r group-hover:from-[#4c6cff] group-hover:via-[#ff6cab] group-hover:to-[#ffc95e] group-hover:animate-gradient-flow" style="background-color: @(project.IconColor)">
                        @((MarkupString)project.IconSvg)
                    </div>

                    <!-- Text content -->
                    <h3 class="font-semibold pr-12">@project.Title</h3>
                    <p class="mt-2 text-sm text-slate-600">@project.Description</p>
                </article>
            }
        </div>
    </div>
</section>

<!-- Journey section (neutral background) -->
<section id="journey" class="border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">My Journey</h2>
        <p class="mt-2 text-slate-600">From writing my first lines of code to leading cloud transformations.</p>

        <div class="mt-10 relative">
            <!-- Animated gradient spine -->
            <div class="pointer-events-none absolute left-5 top-0 h-full w-[3px] bg-gradient-to-b from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-gradient-flow rounded-full"></div>

            @for (int i = 0; i < Timeline.Count; i++)
            {
                var item = Timeline[i];
                <div class="relative pl-14 md:pl-16 mb-10 opacity-0 animate-fade-in-up" style="animation-delay:@(0.1 + (i * 0.1))s">
                    <!-- Marker -->
                    <span class="absolute left-5 top-1.5 -translate-x-1/2 w-5 h-5 rounded-full ring-8 ring-slate-50" style="background-color:@item.Colour"></span>
                    <!-- Content -->
                    <time class="block mb-1 text-sm text-slate-500">@item.Year</time>
                    <h3 class="text-lg font-semibold text-slate-900">@item.Title</h3>
                    <p class="text-slate-600">@item.Description</p>
                </div>
            }
        </div>
    </div>
</section>

