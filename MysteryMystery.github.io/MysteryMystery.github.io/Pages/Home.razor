@page "/"

@layout LandingLayout

<PageTitle>Home</PageTitle>

<div style="background-image: url('/img/landing_background.png'); background-position: center; background-attachment:fixed; background-size: cover;">
    <div class="h-screen w-screen flex flex-col">
        <NavBar />

        <div class="flex flex-col justify-between grow">
            <div class="md:w-1/3 h-fit p-4 bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10">
                <div class="py-2">
                    <h1 class="text-2xl antialiased text-center dark:text-primary-dark">
                        Hi, I am <span class="text-3xl font-syne-mono">James</span>
                    </h1>
                    <h1 class="text-4xl font-semibold antialiased text-center text-primary-light dark:text-primary-dark font-syne-mono">DevOps Engineer</h1>
                </div>
                <div class="flex justify-between">
                    <img src="img/logos/terraform.svg" alt="terraform" class="mx-auto" height="50" width="50" />
                    <img src="img/logos/azure.svg" alt="azure" class="mx-auto" height="50" width="50" />
                    <img src="img/logos/azure-devops.svg" alt="azure-devops" class="mx-auto" height="50" width="50" />
                    <img src="img/logos/dotnet.svg" alt="dotnet" class="mx-auto" height="50" width="50" />
                    <img src="img/logos/azure-arc.svg" alt="azure arc" class="mx-auto" height="50" width="50" />
                </div>
            </div>

            <div class="p-2">
                <div class="w-fit mx-auto text-dark bg-white rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-60 p-3">
                    <h1 class="text-5xl antialiased text-center dark:text-primary-dark font-syne-mono">
                        Join my journey <ArrowDownCircleIcon class="h-10 w-10 inline" />
                    </h1>
                </div>
            </div>

            <div class="p-2">
                <div class="grid gap-2 grid-cols-2 md:grid-cols-6">
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <ArrowTrendingUpIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            On-premise to Azure Migrations
                        </p>
                    </div>
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <ChatBubbleLeftRightIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            Team Guidance & Training
                        </p>
                    </div>
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <BoltIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            Terraform Specialist
                        </p>
                    </div>
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <ShieldCheckIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            Budget Management
                        </p>
                    </div>
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <WrenchIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            Azure DevOps Yaml Pipelines
                        </p>
                    </div>
                    <div class="text-white bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3">
                        <CommandLineIcon class="h-6 w-6" />
                        <p class="text-lg text-center">
                            .Net Development
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="bg-gray-600 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 p-3 container mx-auto">
        <TimeLine>
            <TimeLineItem Date="@(new DateOnly(2019, 01, 01))">
                <Title>Developer by Trade</Title>
                <Icon>
                    <Cog6ToothIcon style="w-10 h-10"/>
                </Icon>
                <Description>
                    Creating booking systems in PHP Laravel.
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>Enthusiast by Night</Title>
                <Icon>
                    <HeartIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Tech grows, stay up to date, see how green the grass is on the other side.
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>Become a DevOps Engineer</Title>
                <Icon>
                    <ArrowPathRoundedSquareIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Leave customer facing development behind, create applications focussing around environment refreshes, developer utilities, and resiliant CI/CD pipelines.
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>What is that in the cloud?</Title>
                <Icon>
                    <CloudIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Upskill on Azure & Terraform
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>Hire the Right Team</Title>
                <Icon>
                    <UserPlusIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Conduct interviews to expand the team 
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>Train the Team</Title>
                <Icon>
                    <BookOpenIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Conduct interviews to expand the team
                </Description>
            </TimeLineItem>
            <TimeLineItem Date="@(new DateOnly(2020, 01, 01))">
                <Title>Take Ownership</Title>
                <Icon>
                    <CloudArrowUpIcon style="w-10 h-10" />
                </Icon>
                <Description>
                    Spearhead an azure migration
                </Description>
            </TimeLineItem>
        </TimeLine>
    </div>

    <div class="p-2">
        <div class="w-fit mx-auto text-dark bg-white rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-60 p-3">
            <h1 class="text-3xl antialiased text-center dark:text-primary-dark font-syne-mono">
                Undertake <span class="text-5xl">Your</span> Journey <ArrowTrendingDownIcon class="h-10 w-10 inline" />
            </h1>
            <p class="text-xl text-right antialiased dark:text-primary-dark">
                <span class="text-3xl">Explore</span> My Side Projects
            </p>
        </div>
    </div>

    <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 p-4">

        @if (IsPokedexEnabled)
        {
            <Card>
                <Header>
                    Pokedex
                </Header>
                <Body>
                    <img src="img/logos/pokeball.svg" alt="pokeball" class="mx-auto" height="200" width="200" />

                    <p>
                        A Pokedex, using the PokeAPI as a backend!
                    </p>

                    <div class="flex justify-center p-4">
                        <NavLink href="/pokedex">
                            <Button Type="primary">Find out more!</Button>
                        </NavLink>
                    </div>
                </Body>
                <Footer>
                    <BadgeRow>
                        <Badge class="primary">
                            .Net 6
                        </Badge>
                        <Badge class="primary">
                            Blazor Wasm
                        </Badge>
                    </BadgeRow>
                </Footer>
            </Card>
        }

        <div class="text-white bg-gray-700 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-70 p-3 grid grid-cols-2">
            <div>
                <img src="img/logos/bloodfields-utils.jpg" alt="azure arc" class="mx-auto" height="200" width="200" />
                <div class="p-3">
                    <BadgeRow>
                        <Badge class="primary">
                            .Net 6
                        </Badge>
                        <Badge class="primary">
                            Blazor Wasm
                        </Badge>

                        <NavLink href="@(_bloodfieldsUtilsUrl)" target="_blank">
                            <Blazor.Heroicons.Outline.ArrowTopRightOnSquareIcon class="w-5 h-5" />
                        </NavLink>
                    </BadgeRow>
                </div>
            </div>
            <div>
                <h1 class="text-xl">BloodFields Utils</h1>
                <p>
                    Bloodfields Utils is a user-friendly tool for creating and managing rosters in Bloodfields. It features an extensive database of units, customizable army lists, and real-time updates, helping players optimize their strategies and stay current with the latest game rules.
                </p>
            </div>
        </div>

        <div class="text-white bg-gray-700 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-70 p-3 grid grid-cols-2">
            <div>
                <img src="img/logos/clout-shoots.jpeg" alt="azure arc" class="mx-auto" height="200" width="200" />
                <div class="p-3">
                    <BadgeRow>
                        <Badge class="primary">
                            .Net 6
                        </Badge>
                        <Badge class="primary">
                            Blazor Wasm
                        </Badge>
                        <Badge class="primary">
                            Web Scraping
                        </Badge>

                        <NavLink href="@(_cloutShootsUrl)" target="_blank">
                            <Blazor.Heroicons.Outline.ArrowTopRightOnSquareIcon class="w-5 h-5" />
                        </NavLink>
                    </BadgeRow>
                </div>
            </div>
            <div>
                <h1 class="text-xl">Clout Shoots Scraper</h1>
                <p>
                    A simple html scraper to scrape entry forms from Ian Downham's wix site.
                </p>
            </div>
        </div>

        <div class="text-white bg-gray-700 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-70 p-3 grid grid-cols-2">
            <div>
                <img src="img/logos/windows-hardening-suite.png" alt="azure arc" class="mx-auto" height="200" width="200" />
                <div class="p-3">
                    <BadgeRow>
                        <Badge class="primary">
                            WinForms
                        </Badge>
                        <Badge class="primary">
                            Bootstrap
                        </Badge>
                    </BadgeRow>
                </div>
            </div>
            <div>
                <h1 class="text-xl">Windows Hardening Suite</h1>
                <p>
                    This university team project consists of a Windows Forms C# application which acts to "lock down" the windows operating system.
                </p>
            </div>
        </div>

        <div class="text-white bg-gray-700 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-70 p-3 grid grid-cols-2">
            <div>
                <img src="img/logos/pixelmc-square.png" alt="azure arc" class="mx-auto" height="200" width="200" />
                <div class="p-3">
                    <BadgeRow>
                        <Badge class="primary">
                            Java
                        </Badge>
                        <Badge class="primary">
                            Spigot API
                        </Badge>
                        <Badge class="primary">
                            MySql
                        </Badge>
                        <Badge class="primary">
                            Jekyll
                        </Badge>
                        <Badge class="primary">
                            Docker
                        </Badge>

                        <NavLink href="@(_pixelmcUrl)" target="_blank">
                            <Blazor.Heroicons.Outline.ArrowTopRightOnSquareIcon class="w-5 h-5" />
                        </NavLink>
                    </BadgeRow>
                </div>
            </div>
            <div>
                <h1 class="text-xl">PixelMC</h1>
                <p>
                    A Minecraft community where I have designed & maintained the website and online store geared towards the community and sales of certain perks in addition to writing plugins for the server to implement extra functionality to improve sales. Currently, the server is dockerised on private virtual machines.
                </p>
            </div>
        </div>

        <div class="text-white bg-gray-700 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-70 p-3 grid grid-cols-2">
            <div>
                <img src="img/logos/bloodfields-utils.jpg" alt="azure arc" class="mx-auto" height="200" width="200" />
                <div class="p-3">
                    <BadgeRow>
                        <Badge class="primary">
                            .Net 6
                        </Badge>
                        <Badge class="primary">
                            Blazor Wasm
                        </Badge>

                        <NavLink href="@(_bloodfieldsUtilsUrl)" target="_blank">
                            <Blazor.Heroicons.Outline.ArrowTopRightOnSquareIcon class="w-5 h-5" />
                        </NavLink>
                    </BadgeRow>
                </div>
            </div>
            <div>
                <h1 class="text-xl">BloodFields Utils</h1>
                <p>
                    Bloodfields Utils is a user-friendly tool for creating and managing rosters in Bloodfields. It features an extensive database of units, customizable army lists, and real-time updates, helping players optimize their strategies and stay current with the latest game rules.
                </p>
            </div>
        </div>
    </div>
</div>
