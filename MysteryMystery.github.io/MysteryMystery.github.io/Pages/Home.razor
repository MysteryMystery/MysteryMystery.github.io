@page "/"

@using MysteryMystery.github.io.Components.Components.Icons;

<!-- Hero section with gradient background -->
<section class="relative overflow-hidden bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] dark:from-[#3d5099] dark:via-[#994d73] dark:to-[#b39050] bg-[length:200%_200%] animate-gradient-flow text-white">
    <div class="max-w-6xl mx-auto px-4 pt-16 pb-10 grid md:grid-cols-2 gap-10 items-center">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-white/20 text-white px-3 py-1 text-xs border border-white/30">
                @(bool.Parse(Configuration["Metadata:AvailableForFreelance"]!) ? "Available for Freelance" : "Not Available for Freelance") • @(Configuration["Metadata:Location"])
            </div>
            <h1 class="mt-4 text-4xl md:text-6xl font-extrabold leading-tight">
                Cloud-first DevOps, <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-yellow-200">made reliable</span>.
            </h1>
            <p class="mt-4 text-white/90 max-w-prose">
                I design and operate Azure platforms using Terraform and modern CI/CD.
                I build guardrails, automate toil, and turn firefighting into predictable delivery.
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
                <!-- Primary: LinkedIn -->
                <a href="@(Configuration["Metadata:LinkedInUrl"])" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-white text-[#0A66C2] font-medium px-4 py-2 rounded-md hover:bg-slate-100 w-full md:w-fit">
                    <!-- LinkedIn icon -->
                    <LinkedIn Fill="currentColor" Class="w-4 h-4"/>
                    Connect on LinkedIn
                </a>

                <!-- Secondary: GitHub -->
                <a href="@(Configuration["Metadata:GitHubUrl"])" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 border border-white/50 text-white hover:bg-white/10 px-4 py-2 rounded-md w-full md:w-fit">
                    <!-- GitHub icon -->
                    <GitHub Fill="currentColor" Class="w-4 h-4" />
                    View GitHub
                </a>
            </div>
            <div class="mt-6 text-xs text-white/80">
                Azure • Terraform • Azure Pipelines • PaaS • Observability • Resilience Engineering
            </div>
        </div>

        <div class="flex justify-center md:justify-end">
            <img src="img/logo.png" class="w-50 h-50" />
        </div>
    </div>
</section>

<StripedSection Id="facts" Index="@(SectionIndex.Next())" IsCompact="true" IsLoaded="IsLoaded" AnimateOnLoad="false">
    <QuickFacts Facts="Facts"/>
</StripedSection>

<StripedSection Id="skills" Index="@(SectionIndex.Next())" IsLoaded="IsLoaded">
    <SectionTitle Title="Core skills" Description="What I use to turn systems into stable platforms." />
    <div class="mt-8 grid md:grid-cols-3 gap-6">
        <CardGroup Cards="Skills" />
    </div>
</StripedSection>

<StripedSection Id="migration" Index="@(SectionIndex.Next())" IsLoaded="IsLoaded">
    @if (CaseStudy != null)
    {
        <CaseStudy Study="CaseStudy" />
    }
</StripedSection>

<StripedSection Id="projects" Index="@(SectionIndex.Next())" IsLoaded="IsLoaded">
    <SectionTitle Title="Selected Projects" Description="Real-world impact through cloud migrations, automation, and platform engineering. Each project reflects a challenge solved and a system improved." />
    <div class="mt-8 grid md:grid-cols-2 gap-6">
        <CardGroup Cards="Projects" />
    </div>
</StripedSection>

<StripedSection Id="journey" Index="@(SectionIndex.Next())" IsLoaded="IsLoaded">
    <SectionTitle Title="My Journey" Description="A timeline of growth — from writing my first lines of code to leading company-wide transformations in cloud and DevOps." />
    <Timeline Items="Timeline" />
</StripedSection>

@if (FeatureFlags.Value.EnableGitHubShowCase) { 
    <StripedSection Id="github-projects" Index="@(SectionIndex.Next())" IsLoaded="IsLoaded">
        <SectionTitle Title="GitHub Projects" Description="Open-source tools and personal experiments that showcase my approach to infrastructure, automation, and developer enablement." />
        <div class="mt-8 grid md:grid-cols-2 gap-6">
            <GithubCardGroup Cards="GitHubProjects" />
        </div>
    </StripedSection>
}