    <div id="projects" class="p-4">
        <Card Type="primary">
            <Header>
                <h1 class="text-2xl text-center">Explore My Projects!</h1>
            </Header>
        </Card>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 p-4">

        @if (IsPokedexEnabled)
        {
            <Card>
                <Header>
                    Pokedex
                </Header>
                <Body>
                    <img src="img/logos/pokeball.svg" alt="pokeball" class="mx-auto" height="200" width="200" />

                    <p>
                        A Pokedex, using the PokeAPI as a backend!
                    </p>

                    <div class="flex justify-center p-4">
                        <NavLink href="/pokedex">
                            <Button Type="primary">Find out more!</Button>
                        </NavLink>
                    </div>
                </Body>
                <Footer>
                    <BadgeRow>
                        <Badge Type="primary">
                            .Net 6
                        </Badge>
                        <Badge Type="primary">
                            Blazor Wasm
                        </Badge>
                    </BadgeRow>
                </Footer>
            </Card>
        }

        <Card>
            <Header>
                BloodFields Utils 
            </Header>
            <Body>
                <img src="img/logos/bloodfields-utils.jpg" alt="azure arc" class="mx-auto" height="200" width="200" />

                <p>
                    Bloodfields Utils is a user-friendly tool for creating and managing rosters in Bloodfields. It features an extensive database of units, customizable army lists, and real-time updates, helping players optimize their strategies and stay current with the latest game rules.
                </p>
            </Body>
            <Footer>
                <BadgeRow>
                    <Badge Type="primary">
                        .Net 6
                    </Badge>
                    <Badge Type="primary">
                        Blazor Wasm
