@page "/"

<!-- Hero section with gradient background -->
<section class="relative overflow-hidden bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-gradient-flow text-white">
    <div class="max-w-6xl mx-auto px-4 pt-16 pb-10 grid md:grid-cols-2 gap-10 items-center">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-white/20 text-white px-3 py-1 text-xs border border-white/30">
                @(bool.Parse(Configuration["Metadata:AvailableForFreelance"]!) ? "Available for Freelance" : "Not Available for Freelance") • @(Configuration["Metadata:Location"])
            </div>
            <h1 class="mt-4 text-4xl md:text-6xl font-extrabold leading-tight">
                Cloud-first DevOps, <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-yellow-200">made reliable</span>.
            </h1>
            <p class="mt-4 text-white/90 max-w-prose">
                I design and operate Azure platforms using Terraform and modern CI/CD.
                I build guardrails, automate toil, and turn firefighting into predictable delivery.
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
                <!-- Primary: LinkedIn -->
                <a href="@(Configuration["Metadata:LinkedInUrl"])" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-white text-[#0A66C2] font-medium px-4 py-2 rounded-md hover:bg-slate-100">
                    <!-- LinkedIn icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                        <path d="M4.98 3.5C4.98 4.88 3.88 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.5 8.5h4V24h-4V8.5zM8.5 8.5h3.8v2.1h.05c.53-1 1.83-2.1 3.77-2.1 4.03 0 4.78 2.65 4.78 6.1V24h-4v-7.9c0-1.88-.03-4.3-2.62-4.3-2.62 0-3.02 2.05-3.02 4.16V24h-4V8.5z" />
                    </svg>
                    Connect on LinkedIn
                </a>

                <!-- Secondary: GitHub -->
                <a href="@(Configuration["Metadata:GitHubUrl"])" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 border border-white/50 text-white hover:bg-white/10 px-4 py-2 rounded-md">
                    <!-- GitHub icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                        <path fill-rule="evenodd" d="M12 .5C5.65.5.5 5.65.5 12c0 5.09 3.29 9.39 7.86 10.91.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.7-3.88-1.54-3.88-1.54-.53-1.35-1.3-1.71-1.3-1.71-1.06-.73.08-.72.08-.72 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.26 3.4.96.11-.75.41-1.26.75-1.55-2.55-.29-5.23-1.28-5.23-5.7 0-1.26.45-2.29 1.19-3.1-.12-.29-.52-1.45.11-3.02 0 0 .97-.31 3.18 1.18a11.1 11.1 0 0 1 5.8 0c2.21-1.49 3.18-1.18 3.18-1.18.63 1.57.23 2.73.11 3.02.74.81 1.19 1.84 1.19 3.1 0 4.43-2.69 5.41-5.25 5.69.42.36.8 1.08.8 2.18 0 1.57-.01 2.84-.01 3.23 0 .31.21.68.8.56A10.99 10.99 0 0 0 23.5 12c0-6.35-5.15-11.5-11.5-11.5z" clip-rule="evenodd" />
                    </svg>
                    View GitHub
                </a>
            </div>
            <div class="mt-6 text-xs text-white/80">
                Azure • Terraform • Azure Pipelines • PaaS • Observability • Resilience Engineering
            </div>
        </div>

        <div class="flex justify-center md:justify-end">
            <img src="img/logo.png" class="w-50 h-50" />
        </div>
    </div>
</section>

<!-- Quick Facts -->
<section class="bg-white">
    <QuickFacts Facts="Facts"/>
</section>

<!-- Skills section (neutral background) -->
<section id="skills" class="border-t border-slate-200 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">Core skills</h2>
        <p class="mt-2 text-slate-600">What I use to turn systems into stable platforms.</p>

        <div class="mt-8 grid md:grid-cols-3 gap-6">
            <CardGroup Cards="Skills" />
        </div>
    </div>
</section>

<section id="migration" class="border-t border-slate-200">
    <CaseStudy Study="CaseStudy" />
</section>

<!-- Projects section (neutral background) -->
<section id="projects" class="border-t border-slate-200 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">Selected projects</h2>
        <div class="mt-8 grid md:grid-cols-2 gap-6">
            <CardGroup Cards="Projects" />
        </div>
    </div>
</section>

<!-- Journey section (neutral background) -->
<section id="journey" class="border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">My Journey</h2>
        <p class="mt-2 text-slate-600">From writing my first lines of code to leading cloud transformations.</p>

        <div class="mt-10 relative">
            <!-- Animated gradient spine -->
            <div class="pointer-events-none absolute left-5 top-0 h-full w-[3px] bg-gradient-to-b from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-gradient-flow rounded-full"></div>

            @for (int i = 0; i < Timeline.Count; i++)
            {
                var item = Timeline[i];
                <div class="relative pl-14 md:pl-16 mb-10 opacity-0 animate-fade-in-up" style="animation-delay:@(0.1 + (i * 0.1))s">
                    <!-- Marker -->
                    <span class="absolute left-5 top-1.5 -translate-x-1/2 w-5 h-5 rounded-full ring-8 ring-slate-50" style="background-color:@item.Colour"></span>
                    <!-- Content -->
                    <time class="block mb-1 text-sm text-slate-500">@item.Year</time>
                    <h3 class="text-lg font-semibold text-slate-900">@item.Title</h3>
                    <p class="text-slate-600">@item.Description</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- GitHub Projects section (neutral background) -->
<section id="github-projects" class="border-t border-slate-200 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 py-14">
        <h2 class="text-2xl font-bold">GitHub Projects</h2>
        <p class="mt-2 text-slate-600">A selection of open‑source and personal projects I've shared on GitHub.</p>

        <div class="mt-8 grid md:grid-cols-2 gap-6">
            @for (int i = 0; i < GitHubProjects.Count; i++)
            {
                var project = GitHubProjects[i];
                <article class="group relative overflow-hidden rounded-lg bg-white border border-slate-200 p-5 pt-8 opacity-0 animate-fade-in-up transition-transform transition-shadow duration-300 hover:scale-[1.03] hover:shadow-lg"
                         style="animation-delay:@(0.1 + (i * 0.1))s">

                    <!-- Shimmer strip -->
                    <span class="pointer-events-none absolute top-0 left-0 w-full h-1 z-10 bg-gradient-to-r from-[#4c6cff] via-[#ff6cab] to-[#ffc95e] bg-[length:200%_200%] animate-border-gradient opacity-0 transition-opacity duration-300 group-hover:opacity-100"></span>

                    <!-- Title & description -->
                    <h3 class="font-semibold">@project.Name</h3>
                    <p class="mt-2 text-sm text-slate-600">@project.Description</p>

                    <!-- Links -->
                    <div class="mt-4 flex gap-4 text-sm font-medium">
                        <!-- GitHub link -->
                        <a href="@project.RepoUrl" target="_blank" rel="noopener noreferrer"
                           class="inline-flex items-center gap-1 text-[#4c6cff] hover:text-[#3b54cc] transition-colors duration-300">
                            <span class="transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-[1px]">
                                <!-- GitHub icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                                    <path fill-rule="evenodd" d="M12 .5C5.65.5.5 5.65.5 12c0 5.09 3.29 9.39 7.86 10.91.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.7-3.88-1.54-3.88-1.54-.53-1.35-1.3-1.71-1.3-1.71-1.06-.73.08-.72.08-.72 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.26 3.4.96.11-.75.41-1.26.75-1.55-2.55-.29-5.23-1.28-5.23-5.7 0-1.26.45-2.29 1.19-3.1-.12-.29-.52-1.45.11-3.02 0 0 .97-.31 3.18 1.18a11.1 11.1 0 0 1 5.8 0c2.21-1.49 3.18-1.18 3.18-1.18.63 1.57.23 2.73.11 3.02.74.81 1.19 1.84 1.19 3.1 0 4.43-2.69 5.41-5.25 5.69.42.36.8 1.08.8 2.18 0 1.57-.01 2.84-.01 3.23 0 .31.21.68.8.56A10.99 10.99 0 0 0 23.5 12c0-6.35-5.15-11.5-11.5-11.5z" clip-rule="evenodd" />
                                </svg>
                            </span>
                            Repo
                        </a>

                        @if (!string.IsNullOrWhiteSpace(project.LiveUrl))
                        {
                            <!-- Live site link -->
                            <a href="@project.LiveUrl" target="_blank" rel="noopener noreferrer"
                               class="inline-flex items-center gap-1 text-[#ff6cab] hover:text-[#e05597] transition-colors duration-300">
                                <span class="transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-[1px]">
                                    <!-- External link icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H19.5M19.5 6V12M19.5 6L10.5 15M6 6h.01M6 12h.01M6 18h.01" />
                                    </svg>
                                </span>
                                Live
                            </a>
                        }
                    </div>
                </article>
            }
        </div>
    </div>
</section>