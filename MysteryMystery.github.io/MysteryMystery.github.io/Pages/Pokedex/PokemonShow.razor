@page "/pokemon/{NameOrId}"


@if(_pokemon is not null)
{
    <Card Class="hover:bg-indigo-100">
        <Header>
            <span class="block text-center capitalize">@(_pokemon.Name)</span>
        </Header>
        <Body>
            <div class="bg-gray-300 dark:bg-gray-600 rounded-full shadow-inner p-2">
                <img src="@(_pokemon.Sprites.OtherSprites.OfficialArtwork.FrontDefault)" alt="@(_pokemon.Name)" class="mx-auto" height="100" width="100" />
            </div>

            <h2 class="text-center rounded-full text-xl">#@(_pokemon.Id.ToString().PadLeft(3, '0'))</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                @foreach (var type in _pokemon.Types.OrderBy(t => t.Slot))
                {
                    <div>
                        <TypeTag Type="@(type.Type.Name)">
                            @(type.Type.Name)
                        </TypeTag>
                    </div>
                }
            </div>
        </Body>
    </Card>
}